---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import CVDownload from '../components/CVDownload';
import Biography from '../components/Biography';
---

<Layout title="Bio - Carla">
  <div transition:persist="header">
    <Header client:load />
  </div>

  <main class="bio-main" transition:animate="slide">
    <div class="container">
      <h1 class="page-title fade-in">Carla Larrea Sánchez</h1>

      <div class="bio-content fade-in">
        <Biography client:load />

        <section class="bio-section cv-section">
          <h2>Curriculum Vitae</h2>
          <CVDownload client:load />
        </section>
      </div>
    </div>
  </main>

  <div transition:persist="footer">
    <Footer />
  </div>
</Layout>

<style>
  .bio-main {
    min-height: 100vh;
    padding-top: 120px;
    padding-bottom: var(--spacing-xl);
  }

  .page-title {
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .bio-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .bio-section {
    margin-bottom: var(--spacing-lg);
  }

  .bio-section h2 {
    margin-bottom: var(--spacing-md);
    border-bottom: 2px solid var(--color-accent);
    padding-bottom: var(--spacing-sm);
  }

  .experience-item {
    margin-bottom: var(--spacing-md);
    padding: var(--spacing-md);
    border-left: 3px solid var(--color-accent);
    padding-left: var(--spacing-md);
  }

  .experience-item h3 {
    margin-bottom: var(--spacing-xs);
  }

  .date {
    font-size: 0.9rem;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
  }

  /* Estilos adicionales para biografía */
  :global(.institution) {
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  :global(.location) {
    font-style: italic;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  :global(.subjects) {
    margin-top: var(--spacing-sm);
    padding: var(--spacing-sm);
    background: rgba(0, 0, 0, 0.03);
    border-radius: var(--radius-sm);
  }

  [data-theme='light'] :global(.subjects) {
    background: rgba(0, 0, 0, 0.02);
  }

  :global(.achievements) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-md);
    margin-top: var(--spacing-md);
  }

  :global(.achievement-item) {
    padding: var(--spacing-md);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
  }

  :global(.achievement-item:hover) {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  :global(.achievement-item h4) {
    margin-bottom: var(--spacing-sm);
    color: var(--color-accent);
    font-size: 1.1rem;
  }

  :global(.achievement-item ul) {
    list-style: none;
    padding: 0;
  }

  :global(.achievement-item li) {
    padding: 0.25rem 0;
    padding-left: var(--spacing-sm);
    position: relative;
  }

  :global(.achievement-item li::before) {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
  }

  /* Sección de CV */
  .cv-section {
    text-align: center;
    padding: var(--spacing-lg);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    background: rgba(0, 0, 0, 0.05);
    transition: all var(--transition-normal);
  }

  [data-theme='light'] .cv-section {
    background: rgba(0, 0, 0, 0.02);
  }

  .cv-section:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .cv-section h2 {
    border-bottom: none;
    margin-bottom: var(--spacing-md);
  }

  .cv-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .cv-buttons .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    min-width: 280px;
    justify-content: center;
    font-size: 1.1rem;
    padding: var(--spacing-sm) var(--spacing-lg);
  }

  .cv-buttons .btn svg {
    transition: transform var(--transition-fast);
  }

  .cv-buttons .btn:hover svg {
    transform: scale(1.1);
  }

  /* Estilos para el componente CVDownload */
  :global(.cv-btn) {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    min-width: 280px;
    justify-content: center;
    font-size: 1.1rem;
    padding: var(--spacing-sm) var(--spacing-lg);
  }

  @media (max-width: 768px) {
    .bio-main {
      padding-top: 100px;
    }

    .cv-section {
      padding: var(--spacing-md);
    }

    .cv-buttons {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .cv-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
