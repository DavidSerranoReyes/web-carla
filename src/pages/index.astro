---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import VideoWithControl from '../components/VideoWithControl';

const base = import.meta.env.BASE_URL;
---

<Layout
  title="Carla Larrea Sánchez - Cineasta y Activista"
  description="Portfolio de Carla Larrea Sánchez: cineasta, directora, guionista y activista por los derechos humanos. Explora mis films, artículos académicos y crítica cinematográfica."
  type="profile"
>
  <div transition:persist="header">
    <Header client:load />
  </div>
  <VideoWithControl client:load baseUrl={base} />

  <main class="home-main" transition:animate="slide">
    <div class="container">
      <div class="home-content">
        <h1 class="home-title fade-in">Carla Larrea Sánchez</h1>
        <p class="home-subtitle fade-in">
          <span data-lang-es>Cineasta</span>
          <span data-lang-en style="display: none;">Filmmaker</span>
        </p>
        <div class="home-cta fade-in">
          <a href={`${import.meta.env.BASE_URL}portfolio/`} class="btn btn-primary">
            <span data-lang-es>Ver Portafolio</span>
            <span data-lang-en style="display: none;">View Portfolio</span>
          </a>
          <a href={`${import.meta.env.BASE_URL}contact/`} class="btn">
            <span data-lang-es>Contacto</span>
            <span data-lang-en style="display: none;">Contact</span>
          </a>
        </div>
      </div>
    </div>
  </main>

  <section class="social-section">
    <div class="container">
      <div class="social-links fade-in">
        <a
          href="https://www.instagram.com/carlilasan/?hl=es"
          target="_blank"
          rel="noopener noreferrer"
