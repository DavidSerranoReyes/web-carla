      </div>
    </div>
  </section>

  <div transition:persist="footer">
    <Footer />
  </div>
</Layout>

<style>
  .home-main {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .home-content {
    text-align: center;
    padding: var(--spacing-xl) 0;
  }

  .home-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700;
    margin-bottom: var(--spacing-sm);
    text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
    animation-delay: 0.2s;
  }

  .home-subtitle {
    font-size: clamp(1.2rem, 3vw, 2rem);
    margin-bottom: var(--spacing-lg);
    text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
    animation-delay: 0.4s;
  }

  .home-cta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    animation-delay: 0.6s;
  }

  /* Sección de Redes Sociales */
  .social-section {
    position: relative;
    z-index: 10;
    padding: var(--spacing-lg) 0;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
  }

  :global([data-theme='light']) .social-section {
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    padding: 0;
    margin: 0 10px;
    transition: transform var(--transition-normal);
  }

  .social-link svg {
    width: 44px;
    height: 44px;
    transition: transform var(--transition-normal);
  }

  .social-link:hover {
    transform: translateY(-3px);
  }

  .social-link:hover svg {
    transform: scale(1.15);
  }

  /* Colores de cada red social en los iconos */
  .social-link.instagram svg {
    color: #e4405f;
  }

  .social-link.facebook svg {
    color: #1877f2;
  }

  .social-link.linkedin svg {
    color: #0a66c2;
  }

  .social-link.vimeo svg {
    color: #1ab7ea;
  }

  @media (max-width: 768px) {
    .home-content {
      padding: var(--spacing-md) 0;
    }

    .home-cta {
      flex-direction: column;
      align-items: center;
    }

    .home-cta .btn {
      width: 100%;
      max-width: 300px;
    }

    .social-section {
      padding: var(--spacing-md) 0;
    }

    .social-links {
      gap: var(--spacing-sm);
    }

    .social-link svg {
      width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  function initHomePage() {
    function updateLanguage() {
      const lang = localStorage.getItem('language') || 'es';
      document.querySelectorAll('[data-lang-es]').forEach((el) => {
        (el as HTMLElement).style.display = lang === 'es' ? '' : 'none';
      });
      document.querySelectorAll('[data-lang-en]').forEach((el) => {
        (el as HTMLElement).style.display = lang === 'en' ? '' : 'none';
      });
    }

    // Update on page load
    updateLanguage();

    // Update when language changes
    window.addEventListener('storage', updateLanguage);
    window.addEventListener('languageChanged', updateLanguage);
  }

  // Execute on load
  initHomePage();

  // Execute after View Transitions
  document.addEventListener('astro:after-swap', initHomePage);
</script>
