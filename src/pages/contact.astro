---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import ContactInfo from '../components/ContactInfo';
import ContactForm from '../components/ContactForm';
---

<Layout
  title="Contacto - Carla Larrea Sánchez"
  description="Ponte en contacto con Carla Larrea Sánchez para colaboraciones, proyectos cinematográficos, conferencias o consultas sobre cine y derechos humanos."
>
  <div transition:persist="header">
    <Header client:load />
  </div>

  <main class="contact-main" transition:animate="slide">
    <div class="container">
      <h1 class="page-title fade-in">Contacto</h1>

      <div class="contact-content fade-in">
        <ContactInfo client:load />

        <ContactForm client:load />
      </div>
    </div>
  </main>

  <div transition:persist="footer">
    <Footer />
  </div>
</Layout>

<style>
  .contact-main {
    min-height: 100vh;
    padding-top: 120px;
    padding-bottom: var(--spacing-xl);
  }

  .page-title {
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .contact-content {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
  }

  :global(.contact-info) {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  :global(.contact-item) {
    padding: var(--spacing-md);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    transition: all var(--transition-normal);
  }

  :global(.contact-item:hover) {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  :global(.contact-item h3) {
    margin-bottom: var(--spacing-sm);
  }

  :global(.contact-item a) {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  :global(.contact-item a:hover) {
    opacity: 0.8;
  }

  /* Social networks styles */
  :global(.social-networks) {
    border: none !important;
    padding: 0 !important;
  }

  :global(.social-links-contact) {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-sm);
    margin-top: var(--spacing-sm);
  }

  :global(.social-link-contact) {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid;
  }

  :global(.social-link-contact svg) {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  :global(.social-link-contact.instagram) {
    background: linear-gradient(
      45deg,
      #f09433 0%,
      #e6683c 25%,
      #dc2743 50%,
      #cc2366 75%,
      #bc1888 100%
    );
    color: white;
    border-color: transparent;
  }

  :global(.social-link-contact.instagram:hover) {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(240, 148, 51, 0.4);
  }

  :global(.social-link-contact.facebook) {
    background: #1877f2;
    color: white;
    border-color: transparent;
  }

  :global(.social-link-contact.facebook:hover) {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(24, 119, 242, 0.4);
  }

  :global(.social-link-contact.linkedin) {
    background: #0a66c2;
    color: white;
    border-color: transparent;
  }

  :global(.social-link-contact.linkedin:hover) {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(10, 102, 194, 0.4);
  }

  :global(.social-link-contact.vimeo) {
    background: #1ab7ea;
    color: white;
    border-color: transparent;
  }

  :global(.social-link-contact.vimeo:hover) {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(26, 183, 234, 0.4);
  }

  :global(.contact-form) {
    padding: var(--spacing-md);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
  }

  :global(.contact-form h2) {
    margin-bottom: var(--spacing-md);
  }

  :global(.form-group) {
    margin-bottom: var(--spacing-md);
  }

  :global(.form-group label) {
    display: block;
    margin-bottom: var(--spacing-xs);
    font-weight: 500;
  }

  :global(.form-group input),
  :global(.form-group textarea) {
    width: 100%;
    padding: var(--spacing-sm);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-sm);
    background: transparent;
    color: var(--color-text);
    font-family: 'Comfortaa', sans-serif;
    transition: border-color var(--transition-fast);
  }

  :global(.form-group input:focus),
  :global(.form-group textarea:focus) {
    outline: none;
    border-color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .contact-main {
      padding-top: 100px;
    }

    .contact-content {
      grid-template-columns: 1fr;
    }

    :global(.social-links-contact) {
      grid-template-columns: 1fr;
    }
  }
</style>
