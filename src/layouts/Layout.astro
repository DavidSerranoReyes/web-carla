---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Portfolio cinematográfico de Carla' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- View Transitions para navegación fluida -->
    <ViewTransitions />

    <!-- Script inline para evitar flash de tema -->
    <script is:inline>
      // Este script se ejecuta antes de que se renderice la página
      (function () {
        const savedTheme = localStorage.getItem('theme');
        const theme = savedTheme || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>

    <!-- Script para mantener el tema durante las transiciones -->
    <script>
      document.addEventListener('astro:before-swap', () => {
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-theme', savedTheme);
      });

      document.addEventListener('astro:after-swap', () => {
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-theme', savedTheme);
      });
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  /* Personalización de las transiciones */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.4s;
  }

  /* Transición de fade */
  ::view-transition-old(root) {
    animation-name: fade-out;
  }

  ::view-transition-new(root) {
    animation-name: fade-in;
  }

  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Transición suave para elementos específicos */
  @media (prefers-reduced-motion: no-preference) {
    ::view-transition-group(*) {
      animation-duration: 0.4s;
      animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }
  }
</style>
